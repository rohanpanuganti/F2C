{
  "name": "F2C",
  "description": "Free to Comment V2",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "https://*.youtube.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "inject.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Make a comment!"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "manifest_version": 2
}